<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DummyTextView">
        <item name="android:layout_width">@dimen/Dummy</item>
        <item name="android:layout_height">@dimen/Dummy</item>
        <item name="android:ems">10</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:hint">@string/dummy</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearVerticalSub">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/headerPadding</item>
    </style>

    <style name="ComponentImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/componentImageSize</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
    </style>

    <style name="PotDivCircuitImage">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginLeft">@dimen/questionPadding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
    </style>

    <style name="DummyComponent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/componentImageSize</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1.85</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
    </style>

    <style name="DummyComponent2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/componentImageSize</item>
        <item name="android:layout_weight">.25</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
    </style>

    <style name="question1Labels">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/questionPadding</item>
        <item name="android:layout_marginLeft">@dimen/questionPadding</item>
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="question1Answers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="question2Labels">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/questionPadding</item>
        <item name="android:layout_marginLeft">@dimen/questionPadding</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="question2Radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">4</item>
    </style>

    <style name="question2RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="question3Labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/questionPadding</item>
        <item name="android:layout_marginLeft">@dimen/questionPadding</item>
    </style>

    <style name="question3Answer">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/questionPadding</item>
        <item name="android:paddingBottom">@dimen/questionPadding</item>
        <item name="android:layout_marginLeft">@dimen/questionPadding</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_weight">4</item>
        <item name="android:hint">@string/q3Hint</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="question3Unit">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/questionPadding</item>
        <item name="android:paddingBottom">@dimen/questionPadding</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/UnitSize</item>
    </style>

    <style name="FilterCircuitImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">@dimen/questionPadding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/SpinnerMargin</item>
        <item name="android:layout_marginLeft">@dimen/SpinnerMargin</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/LineHeight</item>
        <item name="android:layout_marginTop">@dimen/questionBottomMargin</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/questionBottomMargin</item>
    </style>

</resources>
